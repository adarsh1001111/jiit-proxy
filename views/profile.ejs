<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JIIT Proxy - Profile</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-50">
    <%- include('partials/header') %>

    <main class="container mx-auto px-4 py-8">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Your Profile</h1>
      </div>

      <% if(typeof success_msg !== 'undefined' && success_msg) { %>
      <div
        class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6"
      >
        <%= success_msg %>
      </div>
      <% } %> <% if(typeof error_msg !== 'undefined' && error_msg) { %>
      <div
        class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6"
      >
        <%= error_msg %>
      </div>
      <% } %>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Profile Information -->
        <div class="md:col-span-2">
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">
              Personal Information
            </h2>

            <form action="/profile/update" method="POST">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                  <label
                    for="name"
                    class="block text-sm font-medium text-gray-700 mb-1"
                    >Full Name</label
                  >
                  <input
                    type="text"
                    id="name"
                    name="name"
                    value="<%= user.name %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>

                <div>
                  <label
                    for="email"
                    class="block text-sm font-medium text-gray-700 mb-1"
                    >Email</label
                  >
                  <input
                    type="email"
                    id="email"
                    value="<%= user.email %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100"
                    disabled
                  />
                  <p class="text-xs text-gray-500 mt-1">
                    Email cannot be changed
                  </p>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                  <label
                    for="enrollmentNumber"
                    class="block text-sm font-medium text-gray-700 mb-1"
                    >Enrollment Number</label
                  >
                  <input
                    type="text"
                    id="enrollmentNumber"
                    value="<%= user.enrollmentNumber %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100"
                    disabled
                  />
                  <p class="text-xs text-gray-500 mt-1">
                    Enrollment number cannot be changed
                  </p>
                </div>

                <div>
                  <label
                    for="jiitPortalUsername"
                    class="block text-sm font-medium text-gray-700 mb-1"
                    >JIIT Portal Username</label
                  >
                  <input
                    type="text"
                    id="jiitPortalUsername"
                    name="jiitPortalUsername"
                    value="<%= user.jiitPortalUsername %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>
              </div>

              <div class="mb-4">
                <label
                  for="jiitPortalPassword"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Update JIIT Portal Password</label
                >
                <input
                  type="password"
                  id="jiitPortalPassword"
                  name="jiitPortalPassword"
                  placeholder="Enter new portal password"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                />
                <p class="text-xs text-gray-500 mt-1">
                  Leave blank to keep current password
                </p>
              </div>

              <div class="flex justify-end">
                <button
                  type="submit"
                  class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                >
                  Update Profile
                </button>
              </div>
            </form>
          </div>

          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">
              Change Password
            </h2>

            <form action="/profile/change-password" method="POST">
              <div class="mb-4">
                <label
                  for="currentPassword"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Current Password</label
                >
                <input
                  type="password"
                  id="currentPassword"
                  name="currentPassword"
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                />
              </div>

              <div class="mb-4">
                <label
                  for="newPassword"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >New Password</label
                >
                <input
                  type="password"
                  id="newPassword"
                  name="newPassword"
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                />
              </div>

              <div class="mb-4">
                <label
                  for="confirmPassword"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Confirm New Password</label
                >
                <input
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                />
              </div>

              <div class="flex justify-end">
                <button
                  type="submit"
                  class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
                >
                  Change Password
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- Wallet and Stats -->
        <div>
          <!-- Wallet -->
          <div class="bg-white rounded-lg shadow p-6 mb-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Wallet</h2>

            <div class="mb-4">
              <h3 class="text-sm text-gray-500">Current Balance</h3>
              <p class="text-3xl font-bold text-green-600">
                â‚¹<%= user.walletBalance ? user.walletBalance.toFixed(2) : '0.00'
                %>
              </p>
            </div>

            <a
              href="/payment/add-funds"
              class="block w-full bg-green-600 text-white text-center py-2 px-4 rounded mb-3 hover:bg-green-700 transition"
            >
              Add Funds
            </a>

            <a
              href="/payment/withdraw"
              class="block w-full bg-gray-600 text-white text-center py-2 px-4 rounded hover:bg-gray-700 transition"
            >
              Withdraw
            </a>

            <a
              href="/payment/transactions"
              class="text-blue-600 text-sm mt-3 inline-block"
              >View transaction history</a
            >
          </div>

          <!-- Stats -->
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Your Stats</h2>

            <div class="flex justify-between items-center mb-3">
              <span class="text-gray-600">Successful Proxies:</span>
              <span class="font-bold text-green-600"
                ><%= user.successfulProxies || 0 %></span
              >
            </div>

            <div class="flex justify-between items-center mb-3">
              <span class="text-gray-600">Failed Proxies:</span>
              <span class="font-bold text-red-600"
                ><%= user.failedProxies || 0 %></span
              >
            </div>

            <div class="flex justify-between items-center mb-3">
              <span class="text-gray-600">Success Rate:</span>
              <span class="font-bold text-blue-600">
                <%= (user.successfulProxies || 0) + (user.failedProxies || 0) >
                0 ? Math.round(((user.successfulProxies || 0) /
                ((user.successfulProxies || 0) + (user.failedProxies || 0))) *
                100) : 0 %>%
              </span>
            </div>

            <div class="flex justify-between items-center mb-5">
              <span class="text-gray-600">Rating:</span>
              <div class="flex">
                <% for(let i = 0; i < Math.floor(user.rating || 5); i++) { %>
                <svg
                  class="w-5 h-5 text-yellow-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.462a1 1 0 00.95-.69l1.07-3.292z"
                  ></path>
                </svg>
                <% } %> <% if ((user.rating || 5) % 1 !== 0) { %>
                <svg
                  class="w-5 h-5 text-yellow-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <defs>
                    <linearGradient id="halfStar">
                      <stop offset="50%" stop-color="currentColor" />
                      <stop offset="50%" stop-color="#e5e7eb" />
                    </linearGradient>
                  </defs>
                  <path
                    fill="url(#halfStar)"
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.462a1 1 0 00.95-.69l1.07-3.292z"
                  ></path>
                </svg>
                <% } %> <% for(let i = 0; i < (5 - Math.ceil(user.rating || 5));
                i++) { %>
                <svg
                  class="w-5 h-5 text-gray-300"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.462a1 1 0 00.95-.69l1.07-3.292z"
                  ></path>
                </svg>
                <% } %>
              </div>
            </div>

            <div class="border-t border-gray-200 pt-4">
              <a href="/proxy/history" class="text-blue-600 text-sm"
                >View proxy history</a
              >
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script>
      // Password validation
      document.addEventListener("DOMContentLoaded", function () {
        const passwordForm = document.querySelector(
          'form[action="/profile/change-password"]'
        );
        const newPassword = document.getElementById("newPassword");
        const confirmPassword = document.getElementById("confirmPassword");

        if (passwordForm) {
          passwordForm.addEventListener("submit", function (e) {
            if (newPassword.value !== confirmPassword.value) {
              e.preventDefault();
              alert("New passwords do not match!");
            }
          });
        }
      });
    </script>
  </body>
</html>
